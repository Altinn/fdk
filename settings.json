{
	"settings": {
		"analysis": {
			"analyzer": {
				"path-analyzer": {
					"type": "custom",
					"tokenizer": "path-tokenizer"
				}
			},
			"tokenizer": {
				"path-tokenizer": {
					"type": "path_hierarchy",
					"delimiter": "/"
				}
			}
		}
	},
	"mappings": {
		"catalog": {
			"properties": {
				"date": {
					"type": "date",
					"format": "yyyy-MM-dd'T'HH:mm:ssZ"
				},
				"catalogUri": {
					"type": "string",
					"index": "not_analyzed"
				},
				"harvestUrl": {
					"type": "string",
					"index": "not_analyzed"
				},
				"publisher": {
					"properties": {
						"orgPath": {
							"type": "string",
							"analyzer": "path-analyzer",
							"search_analyzer": "keyword"
						}
					}
				}
			}
		},
		"dataset": {
			"properties": {
				"date": {
					"type": "date",
					"format": "yyyy-MM-dd'T'HH:mm:ssZ"
				},
				"datasetId": {
					"type": "string",
					"index": "not_analyzed"
				},
				"datasetUri": {
					"type": "string",
					"index": "not_analyzed"
				}
			}
		},
		"lookup": {
			"properties": {
				"datasetId": {
					"type": "string",
					"index": "not_analyzed"
				},
				"datasetUri": {
					"type": "string",
					"index": "not_analyzed"
				}
			}
		}
	}
}
